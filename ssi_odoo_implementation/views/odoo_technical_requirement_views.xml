<odoo>
<record id="odoo_technical_requirement_view_search" model="ir.ui.view">
    <field name="name">odoo_technical_requirement - search</field>
    <field name="model">odoo_technical_requirement</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='code']" position="after">
                <field name="repository_id" />
                <field name="module_id" />
                <field name="odoo_version_id" />
                <searchpanel>
                    <field name="repository_id" select="multi" icon="fa-folder" />
                </searchpanel>
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_technical_requirement_view_tree" model="ir.ui.view">
    <field name="name">odoo_technical_requirement - tree</field>
    <field name="model">odoo_technical_requirement</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="repository_id" />
                <field name="module_id" />
                <field name="odoo_version_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_technical_requirement_view_form" model="ir.ui.view">
    <field name="name">odoo_technical_requirement - form</field>
    <field name="model">odoo_technical_requirement</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='code']" position="after">
                <field name="repository_id" />
                <field name="module_version" />
                <field
                        name="allowed_module_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field name="module_id" domain="[('id', 'in', allowed_module_ids)]" />
                <field
                        name="allowed_odoo_version_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field
                        name="odoo_version_id"
                        domain="[('id', 'in', allowed_odoo_version_ids)]"
                    />
                <field name="dependency_ids" widget="many2many_tags" />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_technical_requirement_action" model="ir.actions.act_window">
    <field name="name">Technical Requirements</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo_technical_requirement</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="odoo_technical_requirement_menu"
        name="Technical Requirements"
        parent="menu_odoo_configuration"
        action="odoo_technical_requirement_action"
        groups="odoo_technical_requirement_group"
        sequence="10"
    />

</odoo>
