<odoo>
<record id="odoo_repository_view_search" model="ir.ui.view">
    <field name="name">odoo_repository - search</field>
    <field name="model">odoo_repository</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="odoo_repository_view_tree" model="ir.ui.view">
    <field name="name">odoo_repository - tree</field>
    <field name="model">odoo_repository</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="odoo_repository_view_form" model="ir.ui.view">
    <field name="name">odoo_repository - form</field>
    <field name="model">odoo_repository</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="full_name" />
                <field name="html_url" widget="url" />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_repository_action" model="ir.actions.act_window">
    <field name="name">Repositories</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo_repository</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="odoo_repository_menu"
        name="Repositories"
        parent="menu_odoo_configuration"
        action="odoo_repository_action"
        groups="odoo_repository_group"
        sequence="10"
    />

</odoo>
