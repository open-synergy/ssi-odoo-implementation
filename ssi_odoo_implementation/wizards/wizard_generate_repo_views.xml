<odoo>
    <record id="wizard_generate_repo_view_form" model="ir.ui.view">
        <field name="model">wizard.generate_repo</field>
        <field name="arch" type="xml">
            <form>
                <group name="header">
                    <field name="name" />
                </group>
                <footer>
                    <button
                        name="generate"
                        string="Generate"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_generate_repo_action" model="ir.actions.act_window">
        <field name="name">Generate Repositories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.generate_repo</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="wizard_generate_repo_menu"
        parent="menu_github"
        sequence="1"
        action="wizard_generate_repo_action"
    />
</odoo>
